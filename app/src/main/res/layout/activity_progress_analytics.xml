<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgressAnalyticsActivity">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_back"
        android:contentDescription="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Centered Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Progress Analytics"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintStart_toEndOf="@id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"/>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Days Completed Card -->
            <LinearLayout
                android:id="@+id/cardDaysCompleted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/card_bg_slim2"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✓"
                    android:textSize="20sp"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvDaysCompleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Days completed: N/A"
                    android:textSize="14sp"
                    android:ellipsize="none"
                    android:singleLine="true" />
            </LinearLayout>

            <!-- Completion Rate Card -->
            <LinearLayout
                android:id="@+id/cardCompletionRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/card_bg_slim2"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✓"
                    android:textSize="20sp"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvCompletionRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completion rate: N/A"
                    android:textSize="14sp"
                    android:ellipsize="none"
                    android:singleLine="true" />
            </LinearLayout>

            <!-- Most Productive Day Card -->
            <LinearLayout
                android:id="@+id/cardMostProductive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/card_bg_slim2"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✓"
                    android:textSize="20sp"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvMostProductive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Most productive day: N/A"
                    android:textSize="14sp"
                    android:ellipsize="none"
                    android:singleLine="true" />
            </LinearLayout>

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:progress="0"
                android:indeterminate="false"
                android:layout_marginBottom="24dp"
                android:clipToPadding="false"
                android:progressDrawable="@drawable/progress_bar_slim2"/>

            <!-- Daily Progress -->
            <TextView
                android:id="@+id/tvDailyProgressLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Progress"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Daily Chart -->
            <com.example.myapplication.DailyProgressChart
                android:id="@+id/dailyChart"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
