<?xml version="1.0" encoding="utf-8"?>
<!-- app/src/main/res/layout/dialog_add_reminder.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_sheet_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="12dp"
    android:paddingBottom="18dp">

    <!-- small handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="#E6E6E6" />

    <TextView
        android:id="@+id/dialog_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reminder Title:"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp" />

    <EditText
        android:id="@+id/et_reminder_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="Enter title"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:inputType="textCapSentences"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#EEEEEE" />

    <TextView
        android:id="@+id/dialog_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reminder time:"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginBottom="6dp" />

    <!-- Clickable time row: whole linear layout is clickable -->
    <LinearLayout
        android:id="@+id/time_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:padding="6dp"
        android:layout_marginBottom="14dp">

        <TextView
            android:id="@+id/tv_time_display"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="00:00 AM"
            android:paddingLeft="10dp"
            android:background="#F4F4F6"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- buttons row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_cancel_dialog"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@drawable/bg_button_outline"
            android:textColor="#4A3BFF" />

        <View android:layout_width="12dp" android:layout_height="1dp" />

        <Button
            android:id="@+id/btn_save_dialog"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:background="@drawable/bg_button_blue"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</LinearLayout>
